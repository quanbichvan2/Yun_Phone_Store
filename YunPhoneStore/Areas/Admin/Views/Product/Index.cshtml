@using QuanBichVanPS28709_ASM.Models.ProductDto

@model IEnumerable<GetProductsToView>

<section>
    ﻿<div class="container">
        <div class="row">
            <div class="col-12 col-md-6">
                <h2 class="text-primary">
                    Product List
                </h2>
            </div>
            <div class="col-12 col-md-6 text-end">
                <a class="btn btn-primary" asp-area="admin" asp-controller="Product" asp-action="Create">
                    <i class="bi bi-plus-circle"></i> Create new Product
                </a>
            </div>
        </div>
    </div>
    <div class="mt-5 container-fluid">
        <div>
            <table class="table table-bordered table-hover scroll-table w-100">
                <table class="table">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.CategoryName)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Name)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Memory)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Color)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Image)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Price)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Description)
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.CategoryName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Memory)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Color)
                                </td>
                                <td>
                                    <img src="@item.Image" style="height: 40px" />
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Price)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Description)
                                </td>
                                <td>
                                    @*  <form asp-area="admin" asp-action="Edit" asp-route-id="@item.Id" method="get">
                                <input type="submit" value="Edit" />
                                </form> *@
                                    <a asp-area="admin" asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                                    <a asp-area="admin" asp-action="Details" asp-route-id="@item.Id">Details</a> |
                                    <a asp-area="admin" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </table>
        </div>
    </div>
</section>