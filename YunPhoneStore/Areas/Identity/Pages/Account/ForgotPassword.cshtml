@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot your password?";
}

<div class="row d-flex justify-content-center">
    <div class="col-md-4">

        <form method="post" class="mb-0 mt-6 space-y-4 rounded-lg p-4 shadow-lg sm:p-6 lg:p-8;">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="form-floating mb-3">
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                <label asp-for="Input.Email" class="form-label"></label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <button type="submit" class="w-100 btn btn-lg btn-primary">Reset Password</button>
        </form>
    </div>
    <div class="row justify-content-center" style="margin-top:1rem; display:inline-grid;">
        <h1>@ViewData["Title"]</h1>
        <h2>Enter your email.</h2>
    </div>
    @* <h1 class="d-flex justify-content-center">@ViewData["Title"]</h1>
    <h2 class="d-flex justify-content-center">Enter your email.</h2> *@
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
