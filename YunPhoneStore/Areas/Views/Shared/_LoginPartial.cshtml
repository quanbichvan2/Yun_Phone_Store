@using Microsoft.AspNetCore.Identity
@using Persistence.Data;

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@if (SignInManager.IsSignedIn(User))
{

    <a asp-area="Identity" asp-page="/Account/Manage/Index" class="btn rounded-pill bg-light text-secondary border-0 shadow-sm hover-text-dark me-2">
        <img alt="Man"
             src="https://images.unsplash.com/photo-1600486913747-55e5470d6f40?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1770&q=80"
             class="img-fluid rounded-circle"
             style="width: 37px; height: 37px; object-fit: cover;" />
    </a>

    <form id="logoutForm" class="btn rounded-pill bg-light text-secondary border-0 shadow-sm hover-text-dark me-2" asp-area="Identity" asp-page="Pages/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "Customer" })">
        <button id="logout" type="submit" class="nav-link btn btn-link text-dark border-0">Logout</button>
    </form>

}
else
{

    <a class="btn rounded-pill bg-light text-secondary border-0 shadow-sm hover-text-dark me-2" id="register" asp-area="Identity" asp-page="/Account/Register">Register</a>

    <a class="btn rounded-pill bg-light text-secondary border-0 shadow-sm hover-text-dark me-2" id="login" asp-area="Identity" asp-page="/Account/Login">Login</a>

}

