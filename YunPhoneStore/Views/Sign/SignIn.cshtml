@{
    ViewData["Title"] = "SignIn";
}
<section>
    <div class="menu">
        <!-- Background image -->
        <div class="bg-image shadow-2-strong">
            <div class="mask d-flex align-items-center h-100" style="background-color: rgba(0, 0, 0, 0.8);">
                <div class="container"
                    style="height: 34rem; display: flex; flex-direction: column;justify-content: center; ">
                    <div class="row justify-content-center" style="margin: 2rem;">
                        <div class="col-xl-5 col-md-8">
                            <form class="bg-white rounded shadow-5-strong p-5" ng-submit="login()" id="loginForm">
                                <!-- Email input -->
                                <div class="mb-4">
                                    <label for="emailForLogin" class="form-label" id="emailForLogin">Email</label>
                                    <input type="email" id="emailForLogin" class="form-control" ng-model="emailForLogin"
                                        required />
                                </div>
                                <!-- Password input -->
                                <div class="mb-4">
                                    <label for="passwordForLogin" class="form-label"
                                        id="passwordForLogin">Password</label>
                                    <input type="password" id="passwordForLogin" class="form-control"
                                        ng-model="passwordForLogin" required />
                                </div>
                                <!-- 2 column grid layout for inline styling -->
                                <div class="row mb-4">
                                    <div class="col d-flex align-items-center">
                                        <!-- Checkbox -->
                                        <div class="form-check">
                                            <input class="form-check-input" type="checkbox" id="form1Example3"
                                                checked />
                                            <label class="form-check-label" for="form1Example3">Ghi nhớ</label>
                                        </div>
                                    </div>
                                    <div class="col text-end">
                                        <!-- Simple link -->
                                        <a href="#!" class="text-decoration-none">Quên mật khẩu?</a>
                                    </div>
                                </div>

                                <!-- Submit button -->
                                <button type="submit" class="btn btn-primary btn-block" id="submit">Đăng nhập</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- Background image -->
    </div>
</section>


